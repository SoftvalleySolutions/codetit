<Alloy>
	<Window id="window" title="マイページ">
		<!-- iOS -->
		<RightNavButton platform="ios">
			<Button id="infoButton" title="情報" />
		</RightNavButton>

		<ScrollView id="wrapper">
			<View class="spacer" />
			<View class="itemContainer">
				<Label class="itemTitle" text="IDまたは\nメールアドレス" />
				<Label id="email" class="itemValue" />
			</View>
			<View class="itemSeparator" />
			<View class="itemContainer">
				<Label class="itemTitle" text="ニックネーム\n(表示名)" />
				<Label id="nick_name" class="itemValue" />
			</View>
			<View class="itemSeparator" />
			<View class="itemContainer">
				<Label class="itemTitle" text="Facebook連携" />
				<Switch id="connect_facebook" value="false" titleOn='連携する' titleOff="連携しない" class="itemValue2" />
			</View>
			<View class="itemSeparator" />
			<View class="itemContainer">
				<Label class="itemTitle" text="Twitter連携" />
				<Switch id="connect_twitter" value="false" titleOn='連携する' titleOff="連携しない" class="itemValue2" />
			</View>
			<View class="itemSeparator" />
			<Button id="goMyselfMapButton" class="btnActionLarge" title="マップ表示" />
			<Button id="goMyselfTimelineButton" class="btnActionLarge" title="タイムライン表示" />
			<Button id="goEditProfileButton" class="btnSubActionLarge" title="プロフィール編集" />
			<Button id="logoutButton" class="btnDiscardLarge" title="ログアウト" />
			<View class="spacer" />
		</ScrollView>
	</Window>
</Alloy>
